{
  "baseUrl": "${BASE_URL}",
  "endpoints": {
    "btrApproval": "/api/btr/approval",
    "btrApprovalActive": "/api/btr/approval?tz=7&tab=active&sequence=2&limit=10",
    "btrApprovalHistory": "/api/btr/approval?tz=7&tab=history&sequence=2&limit=10"
  },
  "headers": {
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10.15; rv:141.0) Gecko/20100101 Firefox/141.0",
    "Accept": "application/json, text/plain, */*",
    "Accept-Language": "en-US,en;q=0.5",
    "Accept-Encoding": "gzip, deflate, br, zstd",
    "Connection": "keep-alive",
    "Sec-Fetch-Dest": "empty",
    "Sec-Fetch-Mode": "cors",
    "Sec-Fetch-Site": "same-origin",
    "TE": "trailers"
  },
  "authentication": {
    "type": "cookie",
    "tokens": {
      "token_ess": "${TOKEN_ESS}",
      "refresh_token": "${REFRESH_TOKEN}",
      "token_qhse": "${TOKEN_QHSE}"
    },
    "enabled": true
  },
  "loadProfile": {
    "light": {
      "stages": [
        { "duration": "1m", "target": 5 },
        { "duration": "2m", "target": 5 },
        { "duration": "1m", "target": 0 }
      ]
    },
    "medium": {
      "stages": [
        { "duration": "2m", "target": 10 },
        { "duration": "5m", "target": 10 },
        { "duration": "2m", "target": 20 },
        { "duration": "5m", "target": 20 },
        { "duration": "2m", "target": 0 }
      ]
    },
    "heavy": {
      "stages": [
        { "duration": "2m", "target": 10 },
        { "duration": "5m", "target": 10 },
        { "duration": "2m", "target": 20 },
        { "duration": "5m", "target": 20 },
        { "duration": "2m", "target": 50 },
        { "duration": "5m", "target": 50 },
        { "duration": "2m", "target": 0 }
      ]
    },
    "spike": {
      "stages": [
        { "duration": "30s", "target": 1 },
        { "duration": "30s", "target": 100 },
        { "duration": "1m", "target": 100 },
        { "duration": "30s", "target": 1 },
        { "duration": "30s", "target": 0 }
      ]
    }
  },
  "thresholds": {
    "http_req_duration": ["p(95)<${HTTP_REQ_DURATION_P95:-500}"],
    "http_req_failed": ["rate<${HTTP_REQ_FAILED_RATE:-0.05}"]
  },
  "settings": {
    "minSleepTime": "${MIN_SLEEP_TIME:-1}",
    "maxSleepTime": "${MAX_SLEEP_TIME:-3}",
    "enableDetailedLogs": "${ENABLE_DETAILED_LOGS:-false}",
    "enableCustomMetrics": true
  },
  "scenarios": {
    "weights": {
      "get_requests": 0.4,
      "post_requests": 0.2,
      "put_requests": 0.15,
      "delete_requests": 0.1,
      "user_workflow": 0.15
    }
  }
}
